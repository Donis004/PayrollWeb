@model PayrollWeb.Models.Categoria

@{
    ViewData["Title"] = "Agregar Nueva Categoría";
}

<h2>Agregar Nueva Categoría</h2>

<form action="/Categoria/CrearCategoria" method="post">
    @* <input type="hidden" name="IdCategoria" value="@Model.IdCategoria" /> *@
    <div>
        <label for="NombreCategoria">Nombre de la Categoría:</label>
        <input type="text" id="NombreCategoria" name="NombreCategoria" required />
        @if (ViewData.ModelState["NombreCategoria"]?.Errors.Count > 0)
        {
            <span style="color:red;">@ViewData.ModelState["NombreCategoria"]?.Errors[0]?.ErrorMessage</span>
        }
    </div>

    <div>
        <label for="SueldoBase">Sueldo Base:</label>
        <input type="number" id="SueldoBase" name="SueldoBase" step="0.01" required />
        @if (ViewData.ModelState["SueldoBase"]?.Errors.Count > 0)
        {
            <span style="color:red;">@ViewData.ModelState["SueldoBase"]?.Errors[0]?.ErrorMessage</span>
        }
    </div>

    <button type="submit">Guardar</button>
    <a href="@Url.Action("Index", "Categoria")">Cancelar</a>
</form>
