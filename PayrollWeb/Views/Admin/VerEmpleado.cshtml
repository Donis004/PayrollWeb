@model Empleado

@{
    ViewData["Title"] = "Ver Empleado";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-badge me-2"></i>Detalles del Empleado</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="employee-details">
                        <h3 class="text-center mb-4"><i class="bi bi-info-circle me-2"></i>Información del Empleado</h3>

                        <table class="table table-striped table-hover table-bordered">
                            <tbody>
                                <tr>
                                    <td class="fw-bold bg-light">Nombre:</td>
                                    <td>@Model.Nombre</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Apellidos:</td>
                                    <td>@Model.Apellidos</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">DUI:</td>
                                    <td>@Model.Dui</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Correo:</td>
                                    <td><a href="mailto:@Model.Correo">@Model.Correo</a></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Teléfono:</td>
                                    <td>@Model.Telefono</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Dirección:</td>
                                    <td>@Model.Direccion</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Cuenta Corriente:</td>
                                    <td>@Model.CuentaCorriente</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Estado:</td>
                                    <td>
                                        <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                            @Model.Estado
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("VerEditarEmpleado", "Empleado", new { id = Model.IdEmpleado })"
                           class="btn btn-primary btn-lg">
                            <i class="bi bi-pencil-square me-2"></i>Editar Empleado
                        </a>

                        <a href="@Url.Action("VerEmpleados", "Empleado")"
                           class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle me-2"></i>Regresar a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .employee-details {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 2rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .table td {
            vertical-align: middle;
            padding: 1rem;
        }

            .table td:first-child {
                width: 35%;
            }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    .btn-lg {
        padding: 0.5rem 1.5rem;
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-lg {
            width: 100%;
        }
    }
</style>