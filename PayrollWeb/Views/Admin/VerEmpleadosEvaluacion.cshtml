@model List<Empleado>

@{
    ViewData["Title"] = "Lista de Empleados";
}

<h1>Lista de Empleados</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DUI</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.Nombre</td>
                <td>@empleado.Apellidos</td>
                <td>@empleado.Dui</td>
                <td>
                    <a href="@Url.Action("VerEvaluacionDesempeno", "Evaluacion", new { id = empleado.IdEmpleado })" class="btn custom-btn-info"><i class="bi bi-eye-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
