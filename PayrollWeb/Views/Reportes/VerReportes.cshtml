@{
    ViewData["Title"] = "Seleccionar el reporte a mostrar";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("VerEmpleados", "Reportes")" class="btn btn-primary btn-block">
                Historial de Ascensos
            </a>
        </div>

        <div class="col-md-6 mb-3">
            <a href="@Url.Action("VerEmpleadosCompetenciasHabilidades", "ReporteCompetenciasHabilidades")" class="btn btn-primary btn-block">
                Competencias y Habilidades
            </a>
        </div>

        <div class="col-md-6 mb-3">
            <a href="@Url.Action("VerEmpleados", "ReporteAsistencias")" class="btn btn-primary btn-block">
                Asistencias
            </a>
        </div>

         <div class="col-md-6 mb-3">
            <a href="@Url.Action("VerEmpleados", "ReporteEvaluacionEmpleado")" class="btn btn-primary btn-block">
                Evaluaciones Empleado
            </a>
        </div>  
        
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("VerEmpleados", "ReporteAntiguedadEmpleado")" class="btn btn-primary btn-block">
                Antiguedad Empleado
            </a>
        </div>
    </div>
</div>

<style>
    .container {
        text-align: center;
    }

    .btn-block {
        width: 100%;
        padding: 15px;
        font-size: 18px;
    }

    .mt-5 {
        margin-top: 3rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
